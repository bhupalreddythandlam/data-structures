#include<stdio.h>
int main()
{
    int a[10];
    for(int i=0;i<10;i++)
    {
        printf("enter the elements of the array a[%d]:",i);
        scanf("%d",&a[i]);
        if(a[i]%2==0)
        {
            printf("the element a[%d] is a even number\n",i);
        }
        else{
            printf("the element a[%d] is a odd number\n",i);
        }
    }
    return 0;
}
